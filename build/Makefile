# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  graphics_config = debug
  test_config = debug
endif
ifeq ($(config),release)
  graphics_config = release
  test_config = release
endif
ifeq ($(config),dist)
  graphics_config = dist
  test_config = dist
endif

PROJECTS := graphics test

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

graphics:
ifneq (,$(graphics_config))
	@echo "==== Building graphics ($(graphics_config)) ===="
	@${MAKE} --no-print-directory -C . -f graphics.make config=$(graphics_config)
endif

test: graphics
ifneq (,$(test_config))
	@echo "==== Building test ($(test_config)) ===="
	@${MAKE} --no-print-directory -C . -f test.make config=$(test_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f graphics.make clean
	@${MAKE} --no-print-directory -C . -f test.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  dist"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   graphics"
	@echo "   test"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"